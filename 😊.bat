Get-ChildItem -Recurse -File | Where-Object { $_.FullName -notmatch 'node_modules|vendor|\.git|build|(\\|/)(\.?venv)(\\|/)|(\\|/)(font|fonts|icon|icons|image|images)(\\|/)' -and $_.Name -notmatch 'LICENSE|VERSION|package-lock\.json' -and $_.Extension -notmatch '\.(png|jpe?g|gif|svg|mp4|mp3|wav|exe|dll|zip|tar|gz|lock|pdf|ico|woff2?|eot|ttf|inc|min\.js|min\.css|whl|jar)$' } | ForEach-Object { Add-Content merged.txt "`n$($_.FullName)`n"; (Get-Content $_.FullName | Where-Object { $_.Trim() -ne "" } | ForEach-Object { ($_ -replace '^\s*{\s*$', ' {') -replace '^\s*}\s*$', '} ' }) | Out-File -Append merged.txt -Encoding utf8 }
